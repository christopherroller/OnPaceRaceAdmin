@model OnPaceRaceAdmin.ViewModels.DetailsRunnerViewModel

@{
    ViewData["Title"] = $"Details - {Model.Runner.FirstName} {Model.Runner.LastName}";
}

<div class="row">
    <div class="col-lg-11 col-sm-12">
        <h2 class="my-auto">@Model.Runner.FirstName @Model.Runner.LastName</h2>
    </div>
    <div class="col-lg-1 col-sm-12 my-auto">
        <a asp-action="Index" class="btn btn-primary float-right">Back</a>
    </div>

</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <div class="row">
                    <div class="col-lg-11 col-sm-12">
                        <h4>Runner Info</h4>
                    </div>
                    <div class="col-lg-1 col-sm-12 ml-auto my-auto">
                        <a asp-action="Edit" asp-route-id="@Model.Runner.Id" class="btn btn-primary ml-auto">Edit</a>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>@Html.DisplayNameFor(model => model.Runner.FirstName)</h4>
                                    @Html.DisplayFor(model => model.Runner.FirstName)
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>@Html.DisplayNameFor(model => model.Runner.LastName)</h4>
                                    @Html.DisplayNameFor(model => model.Runner.LastName)
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>@Html.DisplayNameFor(model => model.Runner.Email)</h4>
                                    @Html.DisplayFor(model => model.Runner.Email)

                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>
                                        @Html.DisplayNameFor(model => model.Runner.PhoneNumber)
                                    </h4>
                                    @Html.DisplayFor(model => model.Runner.PhoneNumber)
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>@Html.DisplayNameFor(model => model.Runner.Gender)</h4>
                                    @Html.DisplayFor(model => model.Runner.Gender)
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>@Html.DisplayNameFor(model => model.Runner.ClothingSize)</h4>
                                    @Html.DisplayFor(model => model.Runner.ClothingSize)
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>

                                    </h4>                                
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-5 col-sm-12">
                                <div class="form-group">
                                    <h4>
                                        @Html.DisplayNameFor(model => model.Runner.Address)
                                    </h4>
                                    @Html.DisplayFor(model => model.Runner.Address)
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <h4>
                                        @Html.DisplayNameFor(model => model.Runner.City)
                                    </h4>
                                    @Html.DisplayFor(model => model.Runner.City)
                                </div>
                            </div>
                            <div class="col-lg-2 col-sm-12">
                                <div class="form-group">
                                    <h4>
                                        @Html.DisplayNameFor(model => model.Runner.State)
                                    </h4>
                                    @Html.DisplayFor(model => model.Runner.State)

                                </div>
                            </div>
                            <div class="col-lg-2 col-sm-12">
                                <div class="form-group">
                                    <h4>
                                        @Html.DisplayNameFor(model => model.Runner.Zipcode)
                                    </h4>
                                    @Html.DisplayFor(model => model.Runner.Zipcode)

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <h4>Runner Notes</h4>
                <form asp-action="AddNote" asp-controller="Runners" data-ajax="true" data-ajax-method="POST" data-ajax-mode="after" data-ajax-update="#runner-notes">
                    <div class="form-group">
                        <label for="RunnerNote">New Note: </label>
                        <textarea type="text" name="RunnerNote" id="RunnerNote" class="form-control" required></textarea>
                    </div>
                    <input type="hidden" value="@Model.Runner.Id" name="RunnerId" id="RunnerId" />
                    @Html.AntiForgeryToken()
                    <input type="submit" class="btn btn-primary ml-auto" value="Add Note" />
                </form>
                <br />
                <hr />

                @foreach (var note in Model.RunnerNotes)
                {
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            @note.DateAdded.ToString("MM/dd/yyyy")
                        </div>
                        <div class="col-lg-9 col-sm-12">
                            @note.Note
                        </div>
                    </div>
                    <hr />

                }

            </div>
 
    </div>
</div>
</div>
@section scripts{
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}